// Defines the behavior of the 'gf' character.

var danced = false;
function onPlayIdle() {
	// Return false to skip the default animation handling...
	
	// then make GF dance back and forth instead of playing 'idle'
	// Debug.logInfo('[POLYMOD] Beep bloop, GF character should dance! ' + danced);
	danced = !danced;
	if (danced)
		playAnimation('danceRight');
	else
		playAnimation('danceLeft');

	return false;
}